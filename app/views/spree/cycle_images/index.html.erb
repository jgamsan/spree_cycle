<% content_for :sidebar do %>
  <div data-hook="homepage_sidebar_navigation">
    <%= render :partial => 'spree/shared/taxonomies' %>
  </div>
<% end %>

<div id="banner" class="row" data-hook="products_banner">
  <ul id="homepage_cycle">
    <% Spree::CycleImage.all.each do |cycle_image| %>
      <li>
        <%= image_tag(cycle_image.image.url) %>
      </li>
    <% end %>
  </ul>
</div>

<div id="offerts" class="row" data-hook="products_in_offert">
  <div class="columns nine alpha">
    <div class="row">
      <h3 style="text-align:center;">Listado de Productos en Oferta</h3>
      <%= render :partial => 'spree/shared/products', :locals => { :products => @products } %>
    </div>
  </div>
  <div class="columns three omega">
    <div class="row">
      <h5>mas info</h5>
    </div>
  </div>
</div>

<script>
  $('#homepage_cycle').cycle();
</script>
